---
import { Image } from 'astro:assets'
import { Github, Linkedin, Twitter } from 'lucide-astro';

const socials = [
  { icon: Github, url: 'https://github.com/AviatorJonah' },
  { icon: Linkedin, url: 'https://www.linkedin.com/in/aviatorjonah/' },
  { icon: Twitter, url: 'https://x.com/AviatorJonah' },
]
---

<footer
  class="mx-2 mb-2 mt-4 rounded-lg border border-transparent bg-black px-4 py-6 text-white dark:border-neutral-600 sm:px-8"
>
  <div class="flex flex-col gap-8 lg:flex-row lg:gap-4">
    {/* Logo and Description Section */}
    <div class="flex flex-col lg:w-1/3">
      <Image
        height={56}
        width={160}
        src="/logo.png"
        alt="logo"
        class="h-14 w-40 object-cover sm:h-10 sm:w-28"
      />
      <p class="mt-4 text-sm text-white/70">
        Lorem ipsum dolor sit amet consectetur, adipisicing elit. Temporibus
        commodi molestiae accusamus debitis ratione odio eos maiores, fugiat
        nemo corporis dolor nostrum, sapiente facilis nam dicta ut dolorum
        magnam harum?
      </p>
    </div>

    {/* Middle Section - Can be used for navigation or additional content */}
    <div class="lg:w-1/3"></div>

    {/* Newsletter and Socials Section */}
    <div class="flex flex-col gap-6 lg:w-1/3 lg:items-end">
      <div class="w-full lg:max-w-md">
        <h3 class="text-md mb-2">Get updates</h3>
        <div
          class="flex flex-col gap-2 rounded-lg border border-neutral-600 bg-neutral-700 p-2 sm:flex-row sm:gap-4"
        >
          <input
            type="text"
            placeholder="Email"
            class="w-full rounded-lg bg-transparent p-2 focus:outline-none focus:ring-2 focus:ring-white/20"
          />
          <button
            class="rounded-lg bg-white px-4 py-2 text-sm text-black transition-colors hover:bg-white/90"
          >
            Subscribe
          </button>
        </div>
      </div>

      <div class="flex flex-wrap gap-4">
        {
          socials.map((social) => (
            <a href={social.url} class="transition-opacity hover:opacity-80">
              <div class="flex h-10 w-10 items-center justify-center rounded-full bg-neutral-700 sm:h-12 sm:w-12">
                <social.icon class="h-6 w-6" />
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>

  {/* Footer Bottom */}
  <div
    class="mt-8 flex flex-col gap-4 text-xs text-white/70 sm:flex-row sm:items-center sm:justify-between"
  >
    <span>Â© 2024 AviatorJonah. All rights reserved.</span>
    <div class="flex flex-row gap-6">
      <a href="/legal/privacy" class="transition-colors hover:text-white">Privacy Policy</a>
      <a href="/legal/terms" class="transition-colors hover:text-white">Terms of Service</a
      >
    </div>
  </div>
</footer>
