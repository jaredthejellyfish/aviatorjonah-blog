---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { Button } from '@/components/ui/button'
import ThemeToggle from '@/components/ReactThemeToggle'
import Footer from '@/components/Footer.astro'
import { Home, Mail } from 'lucide-astro'

const { cookies, url, redirect } = Astro

const accessToken = cookies.get('sb-access-token')
const refreshToken = cookies.get('sb-refresh-token')

if (accessToken && refreshToken) {
  return redirect('/dashboard')
}

// Get the email from the URL if it exists
const email = url.searchParams.get('email')
---

<BaseLayout
  title="Check Your Email - AviatorJonah"
  description="Please check your email to continue."
>
  <main class="min-h-screen bg-white dark:bg-neutral-900">
    <!-- Navigation Bar -->
    <nav
      class="border-b border-gray-200 bg-white/50 px-6 py-4 dark:border-neutral-800 dark:bg-neutral-900/50"
    >
      <div class="flex items-center justify-between">
        <a
          href="/"
          class="flex items-center gap-2 text-lg font-medium text-gray-900 transition-opacity hover:opacity-80 dark:text-white"
        >
          <Home class="h-5 w-5" />
          <span>Back to Home</span>
        </a>
        <ThemeToggle client:load />
      </div>
    </nav>

    <div class="flex min-h-[calc(100vh-64px)] items-center justify-center">
      <div class="w-full max-w-md px-8">
        <div class="mb-8 flex flex-col items-center">
          <div
            class="mb-6 flex h-16 w-16 items-center justify-center rounded-full border-2 border-blue-500 bg-blue-50 dark:border-blue-400 dark:bg-blue-900/20"
          >
            <Mail class="h-8 w-8 text-blue-500 dark:text-blue-400" />
          </div>
          <h1
            class="mb-2 text-center text-3xl font-light text-gray-900 dark:text-white"
          >
            Check your email
          </h1>
          <p class="text-center text-gray-600 dark:text-gray-400">
            We've sent a {email ? 'password reset' : 'verification'} link to
            {
              email ? (
                <span class="font-medium text-gray-900 dark:text-white">
                  {email}
                </span>
              ) : (
                'your email'
              )
            }
          </p>
        </div>

        <div
          class="rounded-lg border border-gray-200 bg-white p-6 shadow-lg dark:border-neutral-800 dark:bg-neutral-800"
        >
          <div class="space-y-4">
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Click the link in the email to {
                email ? 'reset your password' : 'verify your account'
              }. If you don't see the email, check your spam folder.
            </p>

            <form action="/api/auth/resend-email" method="post" class="pt-2">
              {email && <input type="hidden" name="email" value={email} />}
              <Button
                type="submit"
                className="w-full bg-gray-900 text-white hover:bg-gray-800 dark:bg-gray-800 dark:hover:bg-gray-700"
              >
                Resend email
              </Button>
            </form>

            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div
                  class="w-full border-t border-gray-200 dark:border-neutral-700"
                >
                </div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span
                  class="bg-white px-2 text-gray-500 dark:bg-neutral-800 dark:text-gray-400"
                  >or</span
                >
              </div>
            </div>

            <div class="text-center">
              <a
                href="/signin"
                class="text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
              >
                Try signing in with a different method
              </a>
            </div>
          </div>
        </div>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Having trouble?
            <a
              href="/support"
              class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
            >
              Contact support
            </a>
          </p>
        </div>
      </div>
    </div>
    <Footer />
  </main>
</BaseLayout>
