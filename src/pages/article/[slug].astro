---
import { Search, Circle } from 'lucide-astro'
import BaseLayout from '../../layouts/BaseLayout.astro'
import { getArticleBySlug } from '../../lib/supabase/helpers/getArticleBySlug'
import ThemeToggle from '../../components/ReactThemeToggle'
import { marked } from 'marked'
import Hamburger from '../../components/Hamburger.tsx'

const { slug } = Astro.params

if (!slug) {
  return {
    status: 404,
    body: 'Not found',
  }
}

const article = await getArticleBySlug(slug as string)

if (!article) {
  return {
    status: 404,
    body: 'Not found',
  }
}

const content = marked.parse(article?.content)
---

<BaseLayout title={article?.title} description={article?.excerpt}>
  <main class="p-2">
    <div class="relative">
      <div
        class="absolute left-0 right-0 top-0 h-1/3 rounded-lg bg-gradient-to-b from-black/50 to-transparent"
      >
        <div
          class="mt-1 flex h-20 w-full items-center justify-between px-0 pr-4 text-white sm:mt-4 sm:px-10"
        >
          <a href="/" class="flex items-center gap-6 lg:w-1/3">
            <img
              src="/logo.png"
              alt="logo"
              class="h-14 w-40 scale-75 object-cover sm:scale-100"
            />
          </a>

          <div class="hidden w-1/3 items-center justify-center gap-6 lg:flex">
            <span class="text-lg font-bold text-white"> Home </span>
            <span class="text-lg font-bold text-white"> About </span>
            <span class="text-lg font-bold text-white"> About </span>
            <span class="text-lg font-bold text-white"> About </span>
          </div>

          <div class="relative flex items-center justify-end lg:w-1/3">
            <ThemeToggle client:load />
            <div
              class="ml-3 hidden max-w-[350px] flex-1 items-center justify-between gap-2 rounded-lg bg-white/10 p-2 px-4 text-white sm:flex"
            >
              <input
                type="text"
                placeholder="Search"
                class="w-full bg-transparent outline-none"
              />
              <Search className="h-5 w-5" />
            </div>
            <Hamburger client:load />
          </div>
        </div>
      </div>

      <div
        class="absolute bottom-0 left-0 right-0 flex h-1/3 items-end rounded-lg bg-gradient-to-t from-black/50 to-transparent"
      >
        <div
          class="absolute bottom-0 flex h-[400px] w-full flex-col justify-end rounded-lg bg-gradient-to-t from-black/50 to-transparent px-8 pb-8 text-white"
        >
          <h1 class="mb-4 text-4xl font-bold">
            Sustainable Practices in the Aviation Industry
          </h1>
          <div class="flex flex-row items-center gap-4">
            <img
              src="/human.jpg"
              alt="Author"
              class="h-12 w-12 rounded-full border-2 border-neutral-500"
            />
            <div class="flex flex-col">
              <span class="text-lg font-medium">Alex Smith</span>
              <div class="flex items-center gap-2 text-sm text-white/80">
                <span> October 21, 2024 </span>
                <Circle className="h-2 w-2 fill-white" />
                <span>7 min read</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <img
        src={article?.image}
        alt={article?.title}
        class="h-[50vh] w-[100vw] rounded-lg object-cover"
      />
    </div>

    <article class="mx-5 mt-12 px-4 lg:mx-[200px]">
      <h1 class="mb-4 text-3xl font-bold md:text-5xl">{article.title}</h1>
      <div class="mb-8 flex flex-wrap gap-2">
        <span
          class="rounded-full bg-neutral-200 px-3 py-1 text-sm text-neutral-700 dark:bg-neutral-700 dark:text-neutral-200"
        >
          tag
        </span>
      </div>
      <div
        set:html={content}
        class="prose dark:prose-invert mb-8 !max-w-none"
      />
    </article>
  </main>
</BaseLayout>
