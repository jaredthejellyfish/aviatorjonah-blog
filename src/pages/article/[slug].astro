---
import { Circle } from 'lucide-astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import { getArticleBySlug, getUser } from '@/lib/supabase'
import ThemeToggle from '@/components/ReactThemeToggle'
import { marked } from 'marked'
import Hamburger from '@/components/Hamburger'
import Footer from '@/components/Footer.astro'
import SearchWithResults from '@/components/Search'
import { Button } from '@/components/ui/button'
import User from '@/components/User'


const { slug } = Astro.params

if (!slug) {
  return {
    status: 404,
    body: 'Not found',
  }
}

const article = await getArticleBySlug(slug as string)

if (!article) {
  return {
    status: 404,
    body: 'Not found',
  }
}

const content = marked.parse(article?.content)

const { cookies } = Astro

const isLoggedIn =
  cookies.get('sb-access-token') && cookies.get('sb-refresh-token')
    ? true
    : false

const { user } = isLoggedIn ? await getUser() : { user: null }
---

<BaseLayout title={article?.title} description={article?.excerpt}>
  <main class="p-2">
    <div class="relative">
      <div
        class="absolute left-0 right-0 top-0 z-50 h-1/3 rounded-lg bg-gradient-to-b from-black/50 to-transparent"
      >
        <div
          class="mt-1 flex h-20 w-full items-center justify-between px-0 pr-4 text-white sm:mt-4 sm:px-10 z-50"
        >
          <div class="flex flex-row items-center justify-start gap-x-10">
            <a href="/" class="flex items-center gap-6">
              <img
                src="/logo.png"
                alt="logo"
                class="h-14 w-40 scale-75 object-cover sm:scale-100"
              />
            </a>

            <div class="hidden items-center justify-center gap-6 lg:flex">
              <span class="text-lg font-bold text-white"> Home </span>
              <span class="text-lg font-bold text-white"> About </span>
              <span class="text-lg font-bold text-white"> About </span>
              <span class="text-lg font-bold text-white"> About </span>
            </div>
          </div>

          <div class="relative flex items-center justify-end lg:w-1/3">
            <ThemeToggle client:load />
            <SearchWithResults client:load />
            <a href={isLoggedIn ? '/account' : '/auth/signin'}>
              {
                isLoggedIn ? (
                  <User user={user} />
                ) : (
                  <Button variant="outline">Sign in</Button>
                )
              }
            </a>
            <Hamburger />
          </div>
        </div>
      </div>

      <div
        class="absolute bottom-0 left-0 right-0 z-50 flex h-1/3 items-end rounded-lg bg-gradient-to-t from-black/50 to-transparent"
      >
        <div
          class="absolute bottom-0 flex h-[400px] w-full flex-col justify-end rounded-lg bg-gradient-to-t from-black/50 to-transparent px-8 pb-8 text-white"
        >
          <h1 class="mb-4 text-4xl font-bold">
            Sustainable Practices in the Aviation Industry
          </h1>
          <div class="flex flex-row items-center gap-4">
            <img
              src="/human.jpg"
              alt="Author"
              class="h-12 w-12 rounded-full border-2 border-neutral-500"
            />
            <div class="flex flex-col">
              <span class="text-lg font-medium">Alex Smith</span>
              <div class="flex items-center gap-2 text-sm text-white/80">
                <span> October 21, 2024 </span>
                <Circle class="h-2 w-2 fill-white" />
                <span>7 min read</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <img
        src={article?.image}
        alt={article?.title}
        class="-z-50 h-[50vh] w-[100vw] rounded-lg object-cover"
        transition:name={`article-image-${article.id}`}
      />
    </div>

    <article class="mx-5 mt-12 px-4 lg:mx-[200px]">
      <h1 class="mb-4 text-3xl font-bold md:text-5xl">{article.title}</h1>
      <div class="mb-8 flex flex-wrap gap-2">
        <span
          class="rounded-full bg-neutral-200 px-3 py-1 text-sm text-neutral-700 dark:bg-neutral-700 dark:text-neutral-200"
        >
          tag
        </span>
      </div>
      <div
        set:html={content}
        class="prose mb-8 !max-w-none dark:prose-invert"
      />
    </article>
    <Footer />
  </main>
</BaseLayout>
